#include <aesop/aesop.h>
#include "parser/tests/blocking/btest.hae"
#include <assert.h>

static __blocking void run_par1(void)
{
	int shared = 0;
	int a = 0, b = 0, c = 0;
	int ret1, ret2, ret3;

	pwait
	{
	    pbranch
	    {
		ret1 = btest1(&a);
		assert(ret1 == 0);
		assert(a == 1);
		shared = 1;
	    }

	    pbranch
	    {
		ret2 = btest2(&b);
		assert(ret2 == 0);
		shared = 2;
		assert(b == 2);
	    }
	
	    pbranch
	    {
		ret3 = btest3(&c);
		assert(ret3 == 0);
		assert(c == 3);
	    }
	}

	printf("pwait done\n");
}

__blocking int aesop_main(int argc, char **argv)
{
    run_par1();
    return 0;
}
aesop_main_set(aesop_main);


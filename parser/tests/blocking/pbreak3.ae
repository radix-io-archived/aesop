#include <aesop/aesop.h>
#include "parser/tests/blocking/btest.hae"

static __blocking void run_pbreak3(void)
{
	int a = 0, b = 0;
	int ret, ret2;

	pwait
	{
	    pbranch
	    {
		ret = btest1(&a);
		assert(ret == 0);
		assert(a == 1);
		printf("before pbreak: a == %d!\n", a);
		if(a > 3)
		{
		    printf("hit pbreak!\n");
                    aesop_cancel_branches();
		    pbreak;
		}
		ret = btest2(&a);
		assert(ret == 0);
		assert(a == 3);
		if(a > 1)
		{
		    printf("hit pbreak!\n");
		    pbreak;
		}
		ret = btest3(&a);
		assert(0);
	    }

	    pbranch
	    {
		ret2 = btest1(&b);
		assert(ret2 == 0);
		assert(b == 1);
		ret2 = btest1(&b);
		assert(ret2 == 0);
		assert(b == 2);
	    }
	}

	printf("pwait done\n");

	ret = btest3(&a);
	assert(ret == 0);
	assert(a == 6);
}

__blocking int aesop_main(int argc, char **argv)
{
    run_pbreak3();
    return 0;
}
aesop_main_set(aesop_main);


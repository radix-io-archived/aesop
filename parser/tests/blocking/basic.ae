
#include <assert.h>
#include "src/aesop/aesop.h"
#include "src/aesop/parser/tests/blocking/btest.hae"

static __blocking void run_basic(void)
{
	int ret;
	int a = 0;

        /* test various scenarios of setting a resource configuration
         * parameter
         */
        ret = aesop_set_config("foo", "bar");
        assert(ret == AE_CONFIG_NOT_FOUND);

        ret = aesop_set_config("btest.testconfig", "bar");
        assert(ret == AE_CONFIG_INVALID);

        ret = aesop_set_config("btest.testconfig", "35");
        assert(ret == 0);

        ret = aesop_set_debugging("foo", 1);
        assert(ret == AE_CONFIG_NOT_FOUND);

        ret = aesop_set_debugging("btest", 99);
        assert(ret == AE_CONFIG_INVALID);

        ret = aesop_set_debugging("ae_blocking", 1);
        assert(ret == 0);

	ret = btest1(&a);
	assert(a == 1);
	assert(ret == 0);

	ret = btest2(&a);
	assert(a == 3);
	assert(ret == 0);

        ret = aesop_set_debugging("btest", 1);
        assert(ret == 0);

	ret = btest3(&a);
	assert(a == 6);
	assert(ret == 0);
}

__blocking int aesop_main(int argc, char **argv)
{
    run_basic();
    return 0;
}
aesop_main_set(aesop_main, "btest");


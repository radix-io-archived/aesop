#include "src/aesop/aesop.h"
#include "src/aesop/parser/tests/blocking/btest.hae"
#include <assert.h>

int val = 0;

static __blocking void run_if(void)
{
	int a = 0;
	int ret;
	
	if(val == 0)
	{
		ret = btest1(&a);
		assert(ret == 0);
		assert(a == 1);
		ret = btest2(&a);
		assert(ret == 0);
		assert(a == 3);
		ret = btest3(&a);
		assert(ret == 0);
		assert(a == 6);
	}
	else
	{
		ret = btest3(&a);
		assert(ret == 0);
		assert(a == 3);
		ret = btest2(&a);
		assert(ret == 0);
		assert(a == 5);
		ret = btest1(&a);
		assert(ret == 0);
		assert(a == 6);
	}
}


__blocking int aesop_main(int argc, char **argv)
{
    run_if();
    return 0;
}
btest_main_set(aesop_main, "btest");


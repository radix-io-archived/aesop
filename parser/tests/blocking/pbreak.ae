#include <aesop/aesop.h>
#include "parser/tests/blocking/btest.hae"
#include <assert.h>

static __blocking void run_pbreak(void)
{
	int a = 0, b = 0, c = 0;
	int ret1, ret2, ret3, ret4;

	pwait
	{
	    pbranch
	    {
		ret1 = btest1(&a);
		assert(ret1 == 0);
		assert(a == 1);
	    }

	    pbranch
	    {
                printf("Hello.\n");
                pbreak;
                printf("World.\n");
	    }
	}

	printf("pwait done\n");
}

__blocking int aesop_main(int argc, char **argv)
{
    btest_init();
    run_pbreak();
    btest_finalize();
    return 0;
}

aesop_main_set(aesop_main);



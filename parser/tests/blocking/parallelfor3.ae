#include "aesop.h"
#include "parser/tests/blocking/btest.hae"

static __blocking void run_parfor(
    void)
{
    pwait
    {
        pprivate int i;
        for (i = 0; i < 10; ++i)
        {
            pbranch
            {
                int j=0;
                if(i == 0)
                {
                    /* first pbranch will change the value of j */
                    btest_sleep(1);
                    j=1;
                }
                else
                {
                    /* other pbranches should not see a change */
                    btest_sleep(1);
                    assert(j==0);
                }
            }
        }
    }
}

__blocking int aesop_main(int argc, char **argv)
{
    run_parfor();
    return 0;
}
aesop_main_set(aesop_main, "btest");


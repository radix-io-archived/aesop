#include <aesop/aesop.h>
#include "parser/tests/blocking/btest.hae"

static __blocking void run_whilebreak(void)
{
	int i = 0;
	int a = 0;
	int ret;
	
	while(1)
	{
		ret = btest1(&a);
		assert(ret == 0);
		ret = btest2(&a);
		assert(ret == 0);
		ret = btest3(&a);
		assert(ret == 0);
		++i;
		if(i == 1000)
		{
		    break;
		}
	}
}

__blocking int aesop_main(int argc, char **argv)
{
    run_whilebreak();
    return 0;
}
aesop_main_set(aesop_main);



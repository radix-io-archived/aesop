

#include <assert.h>
#include <unistd.h>
#include "aesop.h"
#include "parser/tests/blocking/btest.hae"

__blocking int blah(void)
{
    btest_sleep(100);
    return 0;
}

static __blocking int run_compound(void)
{
	int ret;
	int a;

        {
            a = 0;
            
            ret = btest1(&a);
            assert(a == 1);
            assert(ret == 0);

            ret = btest2(&a);
            assert(a == 3);
            assert(ret == 0);

            {
                a = 0;

                ret = btest1(&a);
                assert(a == 1);
                assert(ret == 0);

                ret = btest2(&a);
                assert(a == 3);
                assert(ret == 0);

            }
        }
        return 0;
}

__blocking int aesop_main(int argc, char **argv)
{
    return run_compound();
}
aesop_main_set(aesop_main);


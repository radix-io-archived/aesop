DIR := src/aesop/parser/tests/remote

# define the test_remote module
REMOTE_TESTLIB_MODULES += $(DIR)/test_remote

# specifies which aer files get included in the module
REMOTE_TESTMODSRC_$(DIR)/test_remote := $(DIR)/test-remote.aer

# include aer file as test binary
REMOTE_TESTSRC += $(DIR)/test-remote.aer

MODCFLAGS_$(DIR)/test-remote = $(MPICFLAGS)
MODLDFLAGS_$(DIR)/test-remote = $(MPILDFLAGS)
MODLIBS_$(DIR)/test-remote = $(MPILIBS)
MODCC_$(DIR)/test-remote = $(MPICC)

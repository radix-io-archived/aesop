
#include <stdio.h>
#include "aesop.h"
#include "resources/timer/timer.hae"

int exit_loop = 0;

static __blocking int receiver()
{
    int i = 0;
    printf("receiver\n");

    pwait
    {
        pbranch
        {
            while(!exit_loop)
            {
                printf("recving...\n");
                triton_timer(100);
            }
        }
        pbranch
        {
            while(!exit_loop)
            {
                printf("sleeping...\n");
                triton_timer(100);
                if (i++ == 10)
                {
                    exit_loop = 1;
                }
            }
        }
    }

    return 0;
}

__blocking int aesop_main(int argc, char **argv)
{
    int receiver_ret;

    printf("ready\n");

    receiver_ret = receiver();

    printf("done\n");

    return receiver_ret;
}

aesop_main_set(aesop_main);


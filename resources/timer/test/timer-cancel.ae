
#include <stdio.h>
#include "aesop.h"
#include "resources/timer/timer.hae"
#include "aesop-support.hae"

static __blocking int dotimer(void)
{
    pwait
    {
        pbranch
        {
            printf("sleeping for 10 s\n");
            aesop_timer(10000);
            printf("10 s done.\n");
        }

        pbranch
        {
            printf("sleeping for 1 s\n");
            aesop_timer(1000);
            printf("1 s done.\n");

            /* shut down the other timer */
            printf("canceling other branch\n");
            aesop_cancel_branches_wait();
            printf("cancel done\n");

        }
    }
    return 0;
}

__blocking int aesop_main(int argc, char **argv)
{
    int dotimer_ret;

    dotimer_ret = dotimer();

    return dotimer_ret;
}

aesop_main_set(aesop_main);

